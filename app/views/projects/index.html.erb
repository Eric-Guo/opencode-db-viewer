<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th><%= t('.name') -%></th>
            <th><%= t('.worktree') -%></th>
            <th><%= t('.vcs') -%></th>
            <th><%= t('.time_created') -%></th>
            <th><%= t('.time_updated') -%></th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <% created_time = project.time_created_at %>
            <% updated_time = project.time_updated_at %>
            <% created_at_text = created_time&.strftime("%Y-%m-%d %H:%M:%S") || "-" %>
            <% updated_at_text = updated_time&.strftime("%Y-%m-%d %H:%M:%S") || "-" %>
            <tr>
              <td><%= project.name.presence || project.id -%></td>
              <td><%= project.worktree -%></td>
              <td><%= project.vcs -%></td>
              <td>
                <% if created_time %>
                  <%= time_tag(created_time, t(".time_ago", distance: time_ago_in_words(created_time)), title: created_at_text) %>
                <% else %>
                  -
                <% end %>
                <div class="small text-secondary"><%= created_at_text %></div>
              </td>
              <td>
                <% if updated_time %>
                  <%= time_tag(updated_time, t(".time_ago", distance: time_ago_in_words(updated_time)), title: updated_at_text) %>
                <% else %>
                  -
                <% end %>
                <div class="small text-secondary"><%= updated_at_text %></div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
